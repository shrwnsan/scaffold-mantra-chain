# Test Environment Variables
# Copy this file to .env.test for local testing

# MANTRA Chain Configuration
VITE_MANTRA_RPC_URL=https://rpc.mantrachain.io
VITE_MANTRA_CHAIN_ID=mantrachain-1
VITE_MANTRA_REST_URL=https://api.mantrachain.io

# Contract Configuration (for testing)
VITE_CONTRACT_ADDRESS=mantra1testcontractaddress123456789
VITE_CONTRACT_CODE_ID=123

# Wallet Configuration
VITE_WALLET_MNEMONIC=test test test test test test test test test test test junk
VITE_TEST_WALLET_ADDRESS=mantra1testaddress123456789

# Test Configuration
VITE_TEST_MODE=true
VITE_MOCK_BLOCKCHAIN=true
