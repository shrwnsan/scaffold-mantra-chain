{
  "testEnvironment": "jsdom",
  "setupFilesAfterEnv": [
    "<rootDir>/src/__tests__/setup.js"
  ],
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1"
  },
  "transform": {
    "^.+\\.(js|jsx)$": "babel-jest"
  },
  "moduleFileExtensions": ["js", "jsx", "json"],
  "testMatch": [
    "<rootDir>/src/**/__tests__/**/*.test.(js|jsx)",
    "<rootDir>/src/**/?(*.)(test|spec).(js|jsx)"
  ],
  "collectCoverageFrom": [
    "src/**/*.{js,jsx}",
    "!src/index.jsx",
    "!src/**/__tests__/**",
    "!src/**/node_modules/**"
  ],
  "coverageReporters": ["text", "lcov", "html"],
  "testTimeout": 10000
}