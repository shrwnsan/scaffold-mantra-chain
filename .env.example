# MANTRA Chain Configuration
# Copy this file to .env and update with your values

# Chain Configuration
VITE_MANTRA_CHAIN_ID=mantra-1
VITE_MANTRA_RPC_URL=https://rpc.mantrachain.io
VITE_MANTRA_REST_URL=https://api.mantrachain.io

# Contract Address (Replace with your deployed contract)
VITE_CONTRACT_ADDRESS=your_contract_address_here

# Gas Configuration (Optional)
VITE_GAS_PRICE=0.025umantra
VITE_GAS_LIMIT=200000

# Application Configuration
VITE_APP_NAME=Scaffold MANTRA Chain
VITE_APP_VERSION=1.0.0

# Debug Mode (Set to "true" for development debugging)
VITE_DEBUG=false

# Wallet Configuration
VITE_WALLET_CONNECT_PROJECT_ID=your_walletconnect_project_id_here

# Feature Flags
VITE_ENABLE_CONTRACT_INTERACTION=true
VITE_ENABLE_WALLET_CONNECTION=true